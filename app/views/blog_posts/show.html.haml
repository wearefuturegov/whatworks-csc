%h1= @blog_post.title

%p.subheading= raw @blog_post.subheading

%p.date= @blog_post.date.strftime('%e %B %Y')

%p.author= "By #{link_to(@blog_post.author.name, @blog_post.author.path)}".html_safe

= parse_markdown(@blog_post.body)

%h4 Leave a Comment

= render 'comments/form'

- if @blog_post.comments.count > 0
  %h4 Comments

  = render partial: 'comments/comment', collection: CommentsDecorator.decorate_collection(@blog_post.comments), as: :comment
  
