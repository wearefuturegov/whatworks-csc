= simple_form_for :comment, url: blog_post_comments_path(@blog_post.slug) do |f|
  %strong
    = f.input :name
  %strong
    = f.input :email, as: :email
  %strong
    = f.input :organisation, required: false
  %strong
    = f.input :comment, as: :text

  = f.button :submit, t('simple_form.labels.comment.create'), class: 'button'
