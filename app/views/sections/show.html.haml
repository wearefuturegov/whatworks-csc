.container.content_page

  %h1= @section.title

  .indented
    = parse_markdown(@section.content)

    - if @pages.count > 0
      .full_width.inner_container
        .sub_pages
          - @pages.each do |p|
            .single_sub_page.inner_container{ class: p.slug }
              .title_container
                %h3=p.title
                .summary= p.try(:summary)

                .chevron_link
                  %span.chevron.r
                  = link_to "View #{p.title.downcase}", section_page_path(@section.slug, p.slug)
